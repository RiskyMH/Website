---
import ProjectInfo from "./ProjectInfo.astro";
import EmailThingIcon from "../../public/emailthing.svg";
import RiskyBOTIcon from "../../public/riskybot.svg";
import McBopIcon from "../../public/mcbop.svg";
import FormsIcon from "../../public/forms.svg";
import StatsCompareIcon from "../../public/stats-compare.svg";
import ChatroomIcon from "../../public/chatroom.svg";
---

<ProjectInfo
	name="EmailThing"
	icon="/emailthing.svg"
	Icon={EmailThingIcon}
	iconCircle
	links={[
		{ url: "https://emailthing.app/home", type: "website" },
		{ url: "https://github.com/RiskyMH/Email", type: "github" },
	]}
	description="A Gmail alternative that I made because I wanted free custom domain."
/>

<ProjectInfo
	name="RiskyBOT"
	icon="https://bot.riskymh.dev/robot.svg"
	Icon={RiskyBOTIcon}
	iconCircle
	links={[
		{
			type: "discord-bot-invite",
			url: "https://discord.com/api/oauth2/authorize?client_id=780657028695326720",
		},
		{ url: "https://github.com/RiskyMH/RiskyBOT", type: "github" },
		{ url: "https://bot.riskymh.dev", type: "website" },
	]}
	description="A multipurpose Discord bot that can do random things..."
/>

<ProjectInfo
	name="Boppy McBop Face"
	icon="/mcbop.svg"
	Icon={McBopIcon}
	iconCircle
	links={[
		{
			type: "discord-bot-invite",
			url: "https://discord.com/oauth2/authorize?client_id=890492527701024808",
		},
		{ url: "", type: "website", disabled: "Currently doesn't have website" },
	]}
	description="A Discord leveling bot with some other server features..."
/>

<ProjectInfo
	name="Forms"
	icon="/forms.svg"
	Icon={FormsIcon}
	links={[
		{ url: "https://forms.riskymh.dev", type: "website" },
		{ url: "https://github.com/RiskyMH/Forms", type: "github" },
	]}
	description="A website where you can create forms and get responses."
/>

<ProjectInfo
	name="Stats Compare"
	icon="/stats-compare.svg"
	Icon={StatsCompareIcon}
	links={[
		{ url: "https://stats.riskymh.dev", type: "website" },
		{ url: "https://github.com/RiskyMH/Stats", type: "github" },
	]}
	description="Site with a bunch of stats (can play higher or lower)."
/>

<ProjectInfo
	name="Chatroom"
	icon="/chatroom.svg"
	Icon={ChatroomIcon}
	links={[
		{ url: "https://chatroom.riskymh.dev", type: "website" },
		{ url: "https://github.com/RiskyMH/Chatroom", type: "github" },
	]}
	description="A basic stateless and bun websocket server."
/>

