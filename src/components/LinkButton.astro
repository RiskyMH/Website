---
interface Props {
	url: string;
	text: string;
	Icon: any;
	newTab?: boolean;
	noMobile?: boolean;
	disabled?: string;
}

const { url, text, Icon, newTab = false, noMobile = false, disabled = false} = Astro.props;
---
<a
  href={url === "" ? "#" : url}
  target={newTab ? "_blank" : "_self"}
  rel="noopener noreferrer"
  title={disabled || text}
  class={
    `block rounded-sm bg-[#4a4a4a] p-1.5 shadow-sm text-center ` +
    (noMobile ? "w-20" : "w-full md:w-20") + " " +
    (disabled ? "opacity-25 cursor-default": "hover:bg-white hover:text-[#1a1a1a]")
  }
>
  <Icon />
</a>
