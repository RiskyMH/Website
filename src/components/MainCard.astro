---
import DiscordIcon from "./DiscordIcon.svg";
import ExternalIcon from "./ExternalIcon.svg";
import GitHubIcon from "./GitHubIcon.svg";
import SocialDropdown from "./SocialDropdown.astro";
import LinkButton from "./LinkButton.astro";
import MailIcon from "./MailIcon.svg";
import DropdownLink from "./DropdownLink.astro";
import YouTubeIcon from "./YouTubeIcon.svg";
import TwitterIcon from "./TwitterIcon.svg";
import RedditIcon from "./RedditIcon.svg";
import BlueskyIcon from "./BlueskyIcon.svg";
import GlobeIcon from "./GlobeIcon.svg";
---

<div
  id="main-card"
  class="z-10 flex flex-col items-center rounded-xl bg-[#2a2a2a] p-4 shadow-md md:flex-row md:p-6 gap-5"
>
  <picture class="h-32 w-32 rounded-xl bg-[#3a3a3a]">
    <source media="(max-width:600px)" srcset="fire_anim_small.webp" />
    <img
      loading="lazy"
      src="fire_anim.webp"
      alt="ðŸ”¥ Avatar"
      height="128"
      width="128"
      title="A risky fire..."
      data-from="https://github.com/microsoft/fluentui-emoji/tree/main/assets/Fire"
    />
  </picture>

  <div class="flex flex-col gap-2 sm:mr-2">
    <main class="text-center md:text-left">
      <h1 class="text-3xl font-bold leading-9">RiskyMH</h1>
      <p class="text-[#A6A6A6]">Just a random person on the internet</p>
    </main>

    <div class="flex flex-col md:flex-row gap-2 w-full">
      <LinkButton
        url="https://github.com/RiskyMH"
        text="GitHub"
        Icon={GitHubIcon}
      />
      <LinkButton
        url="https://discord.gg/qK9pfnB3Yv"
        text="Discord Server"
        Icon={DiscordIcon}
      />
      <LinkButton
        url="mailto:michael@riskymh.dev"
        text="Email"
        Icon={MailIcon}
      />
      <SocialDropdown>
        <DropdownLink
          url="https://github.com/RiskyMH"
          text="GitHub"
          Icon={GitHubIcon}
        />
        <DropdownLink
          url="https://discord.gg/qK9pfnB3Yv"
          text="Discord Server"
          Icon={DiscordIcon}
        />
        <DropdownLink
          url="mailto:michael@riskymh.dev"
          text="Email"
          Icon={MailIcon}
        />
        <DropdownLink
          url="https://x.com/RiskyMH5"
          text="Twitter"
          Icon={TwitterIcon}
        />
        <li class="py-1"><hr class="border-gray-700 border-t" /></li>
        <DropdownLink
          url="https://youtube.com/@RiskyMH"
          text="YouTube"
          Icon={YouTubeIcon}
        />
        <DropdownLink
          url="https://reddit.com/user/RiskyMH"
          text="Reddit"
          Icon={RedditIcon}
        />
        <DropdownLink
          url="https://bsky.app/profile/riskymh.dev"
          text="Bluesky"
          Icon={BlueskyIcon}
        />
        <DropdownLink
          url="https://riskymh.dev"
          text="This Website"
          Icon={GlobeIcon}
        />
      </SocialDropdown>
    </div>
  </div>
</div>
